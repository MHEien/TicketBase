# ==============================================================================
# GENERAL CONFIGURATION
# ==============================================================================
NODE_ENV=production

# ==============================================================================
# APPLICATION PORTS
# ==============================================================================
ADMIN_PORT=3000
API_PORT=4000
PLUGINS_PORT=5000

# ==============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==============================================================================
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_secure_postgres_password
DB_NAME=postgres

# ==============================================================================
# MONGODB CONFIGURATION
# ==============================================================================
MONGO_PORT=27017
MONGO_ROOT_USERNAME=root
MONGO_ROOT_PASSWORD=your_secure_mongo_password
MONGO_PLUGINS_DB=plugin-server

# ==============================================================================
# MINIO CONFIGURATION
# ==============================================================================
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET=plugin-bundles
PLUGIN_ASSETS_BUCKET=plugin-bundles

# ==============================================================================
# JWT CONFIGURATION
# ==============================================================================
JWT_SECRET=your_very_secure_jwt_secret_here
JWT_EXPIRES_IN=24000
JWT_REFRESH_SECRET=your_very_secure_jwt_refresh_secret_here
JWT_REFRESH_EXPIRES_IN=7d
PLUGINS_JWT_EXPIRES_IN=900

# ==============================================================================
# AUTHENTICATION SECRETS
# ==============================================================================
NEXTAUTH_SECRET=your_very_secure_nextauth_secret_here
BETTER_AUTH_SECRET=your_very_secure_better_auth_secret_here

# ==============================================================================
# URL CONFIGURATION
# ==============================================================================
NEXT_PUBLIC_API_URL=http://localhost:4000
BETTER_AUTH_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000
PLUGIN_SERVER_URL=http://localhost:5000

# ==============================================================================
# PLUGIN CONFIGURATION
# ==============================================================================
PLUGIN_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000
PLUGIN_ENCRYPTION_KEY=your_plugin_encryption_key
PLUGIN_CONFIG_SECRET=your_plugin_config_secret

# ==============================================================================
# AWS/S3 CONFIGURATION (for MinIO compatibility)
# ==============================================================================
AWS_REGION=us-east-1
S3_USE_SSL=false

# ==============================================================================
# ADMIN TOOLS
# ==============================================================================
ADMINER_PORT=8080