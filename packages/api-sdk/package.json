{
  "name": "@repo/api-sdk",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.js"
    }
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/client.ts --format esm,cjs --external react --external react-dom",
    "dev": "tsup src/index.ts src/client.ts --format esm,cjs --external react --external react-dom --watch",
    "clean": "rm -rf dist",
    "generate": "orval",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@faker-js/faker": "^9.8.0",
    "@tanstack/react-query": "^5.0.0",
    "axios": "^1.6.0",
    "msw": "^2.10.1"
  },
  "peerDependencies": {
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@repo/typescript-config": "*",
    "tsup": "^8.0.0",
    "typescript": "^5.3.3"
  }
}
